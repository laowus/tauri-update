{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-update",
  "version": "0.1.0",
  "identifier": "com.laowus.tauri-update",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-update",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://api.github.com/repos/{你的GitHub用户名}/{你的仓库名称}/releases/latest"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDBBM0RDN0E0QjZBNkY4OTAKeW91ci1wdWJrZXktcHVibGljLWtleSBub3JlZ29uIG1vZGU6IG1pbmlzaWduLXB1YmxpYy1rZXkK"
    }
  }
}
