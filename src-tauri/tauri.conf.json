{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-update",
  "version": "0.1.1",
  "identifier": "com.laowus.tauri-update",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-update",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' 'unsafe-inline' blob: data: customprotocol: asset: http://asset.localhost ipc: http://ipc.localhost"
      }
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/laowus/tauri-update/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYzOTBDOUM5MzIzNDkwREMKUldUY2tEUXl5Y21RODlLVEJ0VmFIYzMxeDNNUDQ3b1BSU0NoeGp4a0lWc1dPd3A5MmpwdGhHQk8K",
      "skipVerify": true
    }
  }
}
